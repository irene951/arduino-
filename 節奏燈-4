#include <SoftwareSerial.h>
#include <Wire.h>
#include "FastLED.h"            // 此示例程序需要使用FastLED库
#define NUM_LEDS 60             // LED灯珠数量
#define LED_DT 9                // Arduino输出控制信号引脚
#define LED_TYPE WS2812         // LED灯带型号
#define COLOR_ORDER GRB     // RGB灯珠中红色、绿色、蓝色LED的排列顺序
uint8_t max_bright = 10;       // LED亮度控制变量，可使用数值为 0 ～ 255， 数值越大则光带亮度越高
CRGB leds[NUM_LEDS];            // 建立光带led
CHSV myHSVcolor(80,255,150);
int MIC=A0;  //聲音感測模組 AO 輸出接至 A0 腳
int micVal;  //紀錄偵測到的音
int vol;
SoftwareSerial BT(10,11); 
int state=0;
int LED = 2; 

void ledturnon(){
 for(int a=1;vol>a;a++){
    fill_solid(leds,a,myHSVcolor);
    FastLED.show();
    delay(1);
  }
}
void ledturnoff(){
  for(vol;vol>0;vol--){
    fill_solid(leds+vol,1,CRGB::Black);
    FastLED.show();
    delay(5);
  }
}
void ledoperation(){
  micVal=analogRead(MIC);
  vol=micVal/6;
  Serial.println(vol);
  myHSVcolor.h++;
  ledturnon();
  ledturnoff(); 
}
void setup() {
  BT.begin(9600);  
  Serial.begin(9600);
  LEDS.addLeds<LED_TYPE, LED_DT, COLOR_ORDER>(leds, NUM_LEDS);  // 初始化光带
  FastLED.setBrightness(max_bright);
  pinMode(LED, OUTPUT);
}
 
void loop() {
  byte cmd[20];
  int strsize;
    if ((strsize=(BT.available()))>0){
      for (int i=0; i<strsize; i++){
        cmd[i]=char(BT.read());
      }
    }
    if (cmd[0]=='a') {
      state=1;
     digitalWrite(LED, HIGH);
    }
    else {
      digitalWrite(LED, LOW);
    }
    while (state==1){
       ledoperation();
       if ((strsize=(BT.available()))>0){
        for (int i=0; i<strsize; i++){
            cmd[i]=char(BT.read());
      }
    }
       if (cmd[0]=='b'){
        state=0; 
      }
    }
    
  } 
